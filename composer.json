{
    "name": "pota/adif",
    "description": "ADIF file format handling tools",
    "authors": [
        {
            "name": "James Linden (VE3JLN/N6NRD)",
            "email": "rfingaround@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Dan Muntz (WD4DAN)",
            "email": "muntz.dan@gmail.com",
            "role": "Developer"
        }
    ],
    "type": "library",
    "keywords": [
        "POTA",
        "ADIF"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "laravel/pint": "^1.26",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpunit/phpunit": "^11.5",
        "squizlabs/php_codesniffer": "^3.10"
    },
    "autoload": {
        "psr-4": {
            "Pota\\Adif\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pota\\Adif\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "XDEBUG_MODE=coverage phpunit --coverage-html coverage",
        "test:coverage-check": "XDEBUG_MODE=coverage phpunit --coverage-text --coverage-clover=coverage.xml --coverage-filter src",
        "phpstan": "phpstan analyse --memory-limit=512M",
        "pint": "pint",
        "pint:check": "pint --test",
        "cs": "phpcs --standard=PSR12 src tests",
        "cs:fix": "phpcbf --standard=PSR12 src tests"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    }
}
